<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="pagerTabStripText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="wideItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="timeline" parent="wideItem">
        <item name="android:background">@color/timeline_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="footer" parent="timeline">
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="account" parent="timeline" />

    <style name="userDetail">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="remainingText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="userDetailText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorLink">@color/droid_blue</item>
    </style>

    <style name="optionItem">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <drawable name="translucent_background">#A0000000</drawable>

    <style name="Theme.MyTrans" parent="android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@drawable/translucent_background</item>
    </style>

    <style name="HoloTab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@color/tab_background</item>
        <item name="pstsIndicatorColor">@color/gray</item>
        <item name="android:textAppearance">@style/pagerTabStripText</item>
        <item name="android:textColor">@color/tab_text</item>
        <item name="pstsDividerColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="pstsIndicatorHeight">30dp</item>
        <item name="pstsUnderlineHeight">2dp</item>
        <item name="pstsShouldExpand">true</item>
    </style>

</resources>