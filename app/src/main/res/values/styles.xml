<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- Application theme. -->
    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
    </style>

    <style name="pagerTabStripText">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="wideItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="timeline" parent="wideItem">
        <item name="android:background">@color/clickable_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="footer" parent="timeline">
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="account" parent="timeline"/>

    <style name="userDetail">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="remainingText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/sub_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="userDetailText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="optionItem">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="imageButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/transparent_clickable</item>
    </style>

    <drawable name="translucent_background">#A0000000</drawable>

    <style name="Theme.MyTrans" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/translucent_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/fade</item>
        <item name="android:windowExitTransition">@android:transition/fade</item>
    </style>

    <style name="HoloTab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:textAppearance">@style/pagerTabStripText</item>
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:textSize">12sp</item>
        <item name="pstsDividerColor">@android:color/transparent</item>
        <item name="pstsIndicatorHeight">4dp</item>
        <item name="pstsIndicatorColor">?attr/colorAccent</item>
        <item name="pstsUnderlineHeight">0dp</item>
        <item name="pstsShouldExpand">true</item>
    </style>

</resources>