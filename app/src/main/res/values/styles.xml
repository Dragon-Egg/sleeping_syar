<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="Theme.AppCompat"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorAccent">@color/twitter_blue</item>
    </style>

    <style name="AppTheme.ComposeTweet" parent="AppTheme" />
    <!-- Application theme. -->
    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/twitter_blue</item>
    </style>

    <style name="wideItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="timeline" parent="wideItem">
        <item name="android:background">@color/clickable_background</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="footer" parent="timeline">
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="account" parent="timeline" />

    <style name="userDetail">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="remainingText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/sub_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="userDetailText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="appendedImage">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="imageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="action_image">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="TweetButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/twitter_blue</item>
        <item name="colorControlHighlight">@color/twitter_blue_bright</item>
    </style>

    <style name="dialog_action"/>

    <style name="dialog_action_item">
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/status_action_list</item>
    </style>

    <drawable name="translucent_background">#A0000000</drawable>

    <style name="Theme.MyTrans" parent="ToolbarTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/translucent_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="TablayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="ImagePicker" parent="ef_BaseTheme">
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/twitter_blue_bright</item>
    </style>

</resources>