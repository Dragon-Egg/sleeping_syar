<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <EditText
            android:id="@+id/input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/navs"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:textSize="13sp">

            <requestFocus/>
        </EditText>

        <TextView
            android:id="@+id/remainingText"
            style="@style/remainingText"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/input_text"
            android:text="@string/dummy"/>

        <LinearLayout
            android:id="@+id/navs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/appendedImage"
                style="@style/optionItem"
                android:clickable="true"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/tweetInfoBtn"
                style="@style/imageButton"
                android:src="@drawable/ic_question_answer_white_36dp"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/appendPic"
                style="@style/imageButton"
                android:src="@drawable/ic_insert_photo_white_36dp"/>

            <ImageView
                android:id="@+id/picFromCamera"
                style="@style/imageButton"
                android:src="@drawable/ic_camera_alt_white_36dp"/>

            <ImageButton
                android:id="@+id/action_tweet"
                style="@style/imageButton"
                android:src="@drawable/ic_send_white_36dp"/>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>