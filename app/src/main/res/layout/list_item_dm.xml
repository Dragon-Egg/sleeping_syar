<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tweet_status"
    style="@style/timeline" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/icon"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/icon"
        android:text="@string/dummy"
        android:textColor="@color/droid_blue"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/name"
        android:gravity="left|top"
        android:text="@string/dummy"
        android:textColor="@color/text"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/postedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/smallIcon"
        android:layout_alignLeft="@+id/text"
        android:layout_marginTop="2dp"
        android:gravity="left|top"
        android:text="@string/dummy"
        android:textColor="@color/sub_text" />

    <ImageView
        android:id="@+id/lockedIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignTop="@+id/name"
        android:layout_toRightOf="@+id/name"
        android:src="@drawable/ic_locked"
        android:visibility="visible" />

    <TextView
        android:id="@+id/sentTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/smallIcon"
        android:layout_alignParentRight="true"
        android:text="@string/dummy"
        android:textColor="@color/sub_text"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/smallIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/text"
        android:layout_margin="3dp"
        android:layout_toLeftOf="@+id/sentTo"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>