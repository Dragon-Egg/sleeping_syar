<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/previewNav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_gray">

    <TextView
        android:id="@+id/indicatorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/rotateLeft"
        android:gravity="center"
        android:text="@string/dummy"
        android:textColor="@color/tab_text"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/download"
        android:layout_width="@dimen/nav_button_width"
        android:layout_height="@dimen/nav_button"
        android:layout_centerInParent="true"
        android:background="@color/preview_nav_button_background"
        android:paddingBottom="@dimen/nav_button_margin"
        android:paddingTop="@dimen/nav_button_margin"

        app:srcCompat="@drawable/ic_get_app" />

    <ImageView
        android:id="@+id/rotateLeft"
        android:layout_width="@dimen/nav_button_width"
        android:layout_height="@dimen/nav_button"
        android:layout_toLeftOf="@id/download"
        android:background="@color/preview_nav_button_background"
        android:paddingBottom="@dimen/nav_button_margin"
        android:paddingTop="@dimen/nav_button_margin"

        app:srcCompat="@drawable/ic_rotate_left" />

    <ImageView
        android:id="@+id/rotateRight"
        android:layout_width="@dimen/nav_button_width"
        android:layout_height="@dimen/nav_button"
        android:layout_toRightOf="@id/download"
        android:background="@color/preview_nav_button_background"
        android:paddingBottom="@dimen/nav_button_margin"
        android:paddingTop="@dimen/nav_button_margin"

        app:srcCompat="@drawable/ic_rotate_right" />
</RelativeLayout>