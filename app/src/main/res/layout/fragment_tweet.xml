<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray">

        <EditText
            android:id="@+id/input_text"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/navs"
            android:gravity="left|top"
            android:inputType="textMultiLine"
            android:textSize="13sp">
        </EditText>

        <TextView
            android:id="@+id/remainingText"
            style="@style/remainingText"
            android:layout_alignRight="@+id/input_text"
            android:layout_centerVertical="true"
            android:text="@string/dummy"/>

        <LinearLayout
            android:id="@+id/navs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/appendedImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="4dp"
                android:clickable="true"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/appendPic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:background="@color/transparent_clickable"
                android:src="@drawable/ic_attach_file_white_36dp"/>

            <ImageView
                android:id="@+id/action_tweet"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:background="@color/transparent_clickable"
                android:src="@drawable/ic_send_white_36dp"/>
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
