<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/timeline" >

    <com.crakac.ofuton.widget.BitmapImageView
        android:id="@+id/icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/nameAndLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/postedAt"
        android:layout_toRightOf="@+id/icon"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/dummy"
            android:textColor="@color/droid_blue"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/lockedIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_locked"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/screenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameAndLock"
        android:layout_below="@+id/nameAndLock"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/dummy" />

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/screenName"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/screenName"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/favedStar"
            android:gravity="left|top"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/dummy"
            android:textColor="@color/text" />

        <ImageView
            android:id="@+id/favedStar"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_star_color"
            android:visibility="visible" />
    </RelativeLayout>

    <!-- retweeted area -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/content"
        android:layout_below="@+id/inline_preview"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/via"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/smallIcon"
            android:layout_width="16dp"
            android:layout_height="16dp" />

        <TextView
            android:id="@+id/retweeted_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/dummy"
            android:textColor="@color/sub_text" />
    </LinearLayout>

    <com.crakac.ofuton.widget.MultipleImagePreview
        android:id="@+id/inline_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/via"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/inline_preview"
        android:text="@string/dummy"
        android:textColor="@color/sub_text" />

    <TextView
        android:id="@+id/postedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="right"
        android:text="@string/dummy"
        android:textColor="@color/sub_text" />

</RelativeLayout>